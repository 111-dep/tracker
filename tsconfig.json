{
  "compilerOptions": {
    "target": "es2016",                               

    "module": "commonjs",  

    "esModuleInterop": true,                                   
    "forceConsistentCasingInFileNames": true,           
    "strict": true,          

    "skipLibCheck": true,   
    "outDir": "dist",
    "rootDir": ".",

    "typeRoots": ["src/types/interfaces", "./node_modules/@types"]
  },

  "include": ["src/**/*", "tests/**/*"], // Include both src and tests directories
  "exclude": ["node_modules", "dist"]
}